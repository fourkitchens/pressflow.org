name = Pressflow
description = Drupal 7 theme for the official Pressflow site.
engine = phptemplate
version = 0.1
core = 7.x
screenshot = screenshot.jpg

; Unset
stylesheets[all][] = unset/system.menus.css

; CSS
stylesheets[all][] = css/normalize.css
stylesheets[all][] = css/formalize.css
stylesheets[all][] = css/layout.css
stylesheets[all][] = css/style.css

; Load CSS with Modernizr
modernizr[Modernizr.mq('screen and (min-width: 800px)')][yep][] = css/big.css

; JS
scripts[] = js/jquery.formalize.min.js
scripts[] = js/script.js

regions[header] = Header
regions[help] = Help
regions[highlighted] = Highlighted
regions[content] = Content
regions[sidebar] = Sidebar
regions[footer] = Footer

settings[shortcut_module_link] = 1
